@model IEnumerable<WHF.Models.Player>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Show with attributes", "PlayerAtts") <br/>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PlayerID }) |
                    @Html.ActionLink("Edit Attributes", "EditAttributes", new { id = item.PlayerID }) |
                    @Html.ActionLink("Edit Armor", "EditArmor", new { id = item.PlayerID }) |
                    @Html.ActionLink("Display skills", "DisplaySkills", new { id = item.PlayerID }) |
                    @Html.ActionLink("Display talents", "DisplayTalents", new { id = item.PlayerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PlayerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PlayerID })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h2>
        No players available.
    </h2>
}
