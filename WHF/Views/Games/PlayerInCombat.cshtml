@model WHF.Models.Player


@using (Html.BeginForm(Model.PlayerID))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PlayerID)

        <table class="table">
            <tr>
                <td>
                    @Html.HiddenFor(m => Model.PlayerID)
                    @Html.HiddenFor(m => Model.attack)
                    @Html.HiddenFor(m => Model.AttributesID)
                    @Html.DisplayFor(modelItem => Model.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.WeaponSkill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.BallisticSkill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.Strength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.Toughness)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.Agility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.Intellect)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.Willpower)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.Fellowship)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Attributes.Wound)
                </td>
                <td>
                    @Html.EditorFor(m => Model.Roll, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.EditorFor(m => Model.Dmg, new { htmlAttributes = new { @class = "form-control" } })
                </td>
                <td>
                    @Html.DisplayFor(m => Model.attack.Location)
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                    @Html.ActionLink("Submit", "Hit", new { id = Model.PlayerID, roll = Model.Roll, dmg = Model.Dmg })

                </td>
            </tr>

        </table>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
